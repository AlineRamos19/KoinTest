<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/min_margin"
        app:cardElevation="@dimen/elevation_card"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/min_margin"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:textSize="@dimen/size_title"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="@dimen/min_margin"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Título da nota"/>

        <TextView
                android:textSize="@dimen/size_body"
                android:fontFamily="sans-serif-light"
                android:layout_margin="@dimen/min_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/body"
                tools:text="título da nota título da nota título da nota título da nota título da nota título da nota título da nota título da nota título da notatítulo da notatítulo da notatítulo da nota"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"/>

        <TextView
                android:textSize="@dimen/size_date"
                android:fontFamily="sans-serif-light"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/body"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_gravity="end"
                tools:text="13/02/2019"/>


        <View android:layout_width="match_parent"
              android:layout_marginTop="@dimen/min_margin"
              android:layout_height="@dimen/elevation_card"
              android:background="@color/colorPrimary"
              android:id="@+id/priority"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintTop_toBottomOf="@id/date"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>