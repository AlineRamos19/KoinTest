<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_margin="@dimen/min_margin"
              android:padding="4dp"
              android:layout_height="wrap_content">

    <View android:layout_width="match_parent" android:layout_height="6dp"
          android:background="@color/colorPrimary"
          android:id="@+id/priority"/>


<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/min_margin"
        android:layout_marginBottom="@dimen/min_margin"
        tools:text="Título da nota"
/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/body"
            tools:text="título da nota título da nota título da nota título da nota título da nota título da nota título da nota título da nota título da notatítulo da notatítulo da notatítulo da nota"
    />

    <TextView
            android:layout_marginTop="@dimen/min_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:layout_gravity="end"
            tools:text="13/02/2019"
    />



</LinearLayout>