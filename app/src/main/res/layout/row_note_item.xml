<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:cardElevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_height="5dp"
              android:background="@color/colorPrimary"
              android:id="@+id/priority"/>


        <TextView
                android:textSize="16sp"
                android:fontFamily="sans-serif-light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="8dp"
               app:layout_constraintTop_toBottomOf="@id/priority"
                tools:text="Título da nota"
        />

        <TextView
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/body"
                tools:text="título da nota título da nota título da nota título da nota título da nota título da nota título da nota título da nota título da notatítulo da notatítulo da notatítulo da nota"
                 app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"/>

        <TextView
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/body"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:layout_gravity="end"
                tools:text="13/02/2019"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>